<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormLoginActivity"
    android:background="@drawable/d_img_bg"
    android:keepScreenOn="true"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView52"
        android:background="@drawable/d_img_dheket"
        android:layout_centerHorizontal="true" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="166dp"
        android:layout_below="@+id/textView_formLogin_loading"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please wait . . ."
        android:id="@+id/textView_formLogin_loading"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="@string/signUpEmail"
        android:id="@+id/signup_button"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:typeface="normal"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/login_button"
        android:layout_alignStart="@+id/login_button"
        android:layout_marginBottom="74dp"
        android:visibility="gone" />

    <TextView
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:drawableLeft="@drawable/d_ic_fb"
        android:text="LOGIN WITH FACEBOOK"
        android:id="@+id/textView_login_fb"
        android:gravity="center"
        android:textColor="#ffffff"
        android:paddingLeft="30dp"
        android:background="@drawable/roundedbutton_square_fb"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="S u r v e y o r"
        android:id="@+id/textView3"
        android:layout_below="@+id/imageView52"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:typeface="sans" />

</RelativeLayout>
