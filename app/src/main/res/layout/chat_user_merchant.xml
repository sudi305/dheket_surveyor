<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:gravity="left|fill"
            android:padding="5dp"
            android:background="#ddeaee">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Merchant"
                        android:id="@+id/textView_chat_merc_name"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:layout_below="@+id/textView16"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:gravity="right" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Mon 07-02-2015 17:23"
                        android:id="@+id/textView_chat_merc_date"
                        android:textSize="10dp"
                        android:gravity="right" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#5a69bf"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="2dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Hi, ini pesan dari Merchant. Iya di lokasi kami menyediakan tempat parkir yang luas."
                android:id="@+id/textView_chat_merc_message"
                android:singleLine="false"
                android:layout_alignTop="@+id/imageView4"
                android:layout_toRightOf="@+id/textView_chat_merc_name"
                android:layout_toEndOf="@+id/textView_chat_merc_name"
                android:gravity="top|left"
                android:layout_marginBottom="5dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView4"
            android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
            android:layout_below="@+id/textView_chat_vis_name"
            android:layout_toRightOf="@+id/textView16"
            android:background="@drawable/buble"
            android:layout_gravity="top"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="3dp" />

    </LinearLayout>
</LinearLayout>