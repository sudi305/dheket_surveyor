<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- default -->
    <item>
        <layer-list >
            <item>
                <shape android:shape="oval">
                    <gradient
                        android:startColor="#8370dfed"
                        android:endColor="#850ba7ca"
                        android:angle="-90"
                        android:type="linear"
                        />
                    <corners android:radius="5dp" />
                </shape>
            </item>
            <item android:top="1dp" android:bottom="70dp" >
                <shape android:shape="oval">
                    <solid android:color="#20ffffff"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>